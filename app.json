// App configuration file
{
  "expo": {
    "name": "ddmi",
    "slug": "ddmi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/frutas/manga.png", // App icon
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/frutas/manga.png" // favicon
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen", // Splash screen
        {
          "image": "./assets/images/frutas/laranja.png",
          "resizeMode": "cover",
          "backgroundColor": "#000000"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}